# Foremans

foremans () {
    cd ~/Code/accounts
    foreman start &>log/foreman.log &
    cd ~/Code/people
    foreman start &>log/foreman.log &
    cd ~/Code/services
    foreman start &>log/foreman.log &
}

fstop () {
  kill `pgrep -f foreman`
  rm ~/Code/accounts/log/foreman.log
  rm ~/Code/people/log/foreman.log
  rm ~/Code/services/log/foreman.log
}

alias foremans=“foremans”
alias fstop=“fstop”

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
